<section id="contact" class="max-w-4xl mx-auto p-6">
  <h2 class="text-2xl font-bold">Contact Us</h2>
  <!--
    Netlify's form detection requires the <form> to be present in the
    generated static HTML. Avoid wrapping this form in any conditional
    rendering that might remove it during build, otherwise Netlify won't
    recognize it.
  -->
  <form name="track-attack-running-contact-us" method="POST" action="/thanks" data-netlify="true" netlify-honeypot="bot-field" class="mt-4 grid gap-4">
    <input type="hidden" name="form-name" value="contact">
    <p class="hidden">
      <label>Don’t fill this out if you’re human: <input name="bot-field" /></label>
    </p>
    <input type="text" name="name" placeholder="Name" required class="border p-2 rounded">
    <input type="email" name="email" placeholder="Email" required class="border p-2 rounded">
    <textarea name="message" placeholder="Message" required class="border p-2 rounded"></textarea>
    <div data-netlify-recaptcha="true"></div>
    <button type="submit" class="px-4 py-2 bg-primary text-white rounded">Send</button>
  </form>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</section>
