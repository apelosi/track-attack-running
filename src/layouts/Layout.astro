---
import CommitInfo from "../components/CommitInfo.astro";
import "../styles/base.css";
const { title = "Track Attack Running", description = "Fun, fast group workouts and run form coaching." } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href="https://www.trackattackrunning.com/" />
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZLN6NR68X8"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-ZLN6NR68X8');
    </script>
    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">

    <link rel="icon" href="/android-chrome-192x192.png" sizes="192x192" type="image/png">
    <link rel="icon" href="/android-chrome-512x512.png" sizes="512x512" type="image/png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="theme-color" content="#D7322A" />

  </head>
    <body class="bg-white text-kineticBlack">
      <header class="sticky top-0 z-40 bg-kineticBlack text-white border-b-2 border-primary">
        <nav class="max-w-6xl mx-auto flex justify-between items-center px-4 py-3">
          <a href="/" class="flex items-baseline gap-2">
            <span class="font-display uppercase tracking-tight text-xl">Track Attack</span>
            <span class="font-display uppercase tracking-tight text-xl text-primary">Running</span>
          </a>
          <div class="flex items-center gap-6 text-sm">
            <a href="/#contact" class="px-3 py-1.5 bg-primary text-white rounded hover:bg-primaryDark transition-colors">Contact Us</a>
          </div>
        </nav>
      </header>
      <main class="pt-12">
        <slot />
      </main>
      <footer class="mt-16 bg-kineticBlack text-white">
        <div class="max-w-6xl mx-auto px-4 py-8">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <a href="/" class="font-display uppercase tracking-tight text-lg">Track Attack <span class="text-primary">Running</span></a>
            <div class="flex items-center gap-6 text-sm">
              <a href="/terms" class="hover:text-accentLight transition-colors">Terms of Use</a>
              <a href="/privacy" class="hover:text-accentLight transition-colors">Privacy Policy</a>
              <a href="/#contact" class="hover:text-accentLight transition-colors">Contact Us</a>
            </div>
          </div>
          <div class="mt-6 h-0.5 bg-gradient-to-r from-primary via-accent to-accentLight"></div>
          <p class="mt-4 text-center text-xs text-white/80">© 2025 Track Attack Running™</p>
        </div>
      </footer>
      <CommitInfo />
    </body>
  </html>
