---
import CommitInfo from "../components/CommitInfo.astro";
import "../styles/base.css";
const { title = "Track Attack Running", description = "Fun, fast group workouts and run form coaching." } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href="https://www.trackattackrunning.com/" />
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZLN6NR68X8"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-ZLN6NR68X8');
    </script>
    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">

    <link rel="icon" href="/android-chrome-192x192.png" sizes="192x192" type="image/png">
    <link rel="icon" href="/android-chrome-512x512.png" sizes="512x512" type="image/png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="theme-color" content="#D7322A" />

  </head>
    <body class="bg-white text-gray-900">
      <header class="relative overflow-visible bg-gradient-to-r from-primary via-accent to-accentLight text-white">
        <nav class="max-w-6xl mx-auto flex justify-between items-center p-4">
          <div class="flex items-center space-x-3">
            <img src="/logo.svg" alt="Track Attack Running logo" class="w-12 h-12" />
            <span class="text-lg font-bold">Track Attack Running</span>
          </div>
          <a href="#contact" class="font-medium hover:underline">Contact</a>
        </nav>
      </header>
      <main class="pt-12">
        <slot />
      </main>
      <footer class="bg-gradient-to-r from-primary via-accent to-accentLight text-white mt-10">
        <div class="max-w-6xl mx-auto p-4">
          <!-- Logo and copyright row -->
          <div class="flex justify-between items-center mb-4">
            <div class="flex items-center space-x-3">
              <img src="/logo.svg" alt="Track Attack Running logo" class="w-10 h-10" />
            </div>
            <div class="text-center">
              <p class="text-sm">© 2025 Track Attack Running<sup class="text-xs font-normal" style="vertical-align: super; line-height: 0;">™</sup></p>
            </div>
            <div class="w-10 h-10"></div> <!-- Spacer to balance the layout -->
          </div>
          
          <!-- Links row -->
          <div class="flex justify-center space-x-4 text-sm">
            <a href="/terms" class="hover:underline">Terms of Use</a>
            <a href="/privacy" class="hover:underline">Privacy Policy</a>
            <a href="#contact" class="hover:underline">Contact</a>
          </div>
        </div>
      </footer>
      <CommitInfo />
    </body>
  </html>
